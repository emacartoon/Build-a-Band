<div class="row">
    <div class="col-auto">
        <h2>Welcome {{name}}!</h2>
    </div>
</div>
{{#if loggedIn}}
<div class="post new-post animated fadeInUp">
    <h5>Add Your Post</h5>
    <form>
        <div class="row">
            <div class="input-field col m5">
                <input placeholder="ISO of the greatest talent ever" id="new-post" type="text" class="validate">
                <label for="zip">zip</label>
            </div>
        </div>
        <div class="input-field">
            <textarea id="textarea2" class="materialize-textarea" data-length="313"></textarea>
            <label for="textarea2">What are you in search of?</label>
        </div>
    </form>
    <button class="btn waves-effect waves-light" id="submit-post" type="submit">Post me</button>
</div>
{{/if}}



<div class="row mt-4 new-post">
    <div class="col-md-6">
        <h3>Create a post</h3>

        <form class="form new-post">
            <div class="form-group">
                <label for="project-name">Enter the User or Band name</label>
                <input class="form-input" type="text" id="post-title" name="post-title" />
            </div>
            <div class="form-group new-post">
                <label for="post-desc">Description:</label>
                <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
            </div>
            <div class="form-group new-post">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>

    {{#if posts.length}}
    <div class="col-md-6 project-list">
        <h3>Current Posts:</h3>

        {{#each posts as |post|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/project/{{post.id}}">{{post.name}}</a></h4>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="/js/writePost.js"></script>